{% extends 'layout.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="order-0 col-6 col-sm-6 col-md-3 col-xl-2 img-fluid">{{ source('/images/advertisement.svg') }}</div>
        <div class="order-1 col-6 col-sm-6 col-md-3 col-xl-2 img-fluid">{{ source('/images/group.svg') }}</div>
        <div class="order-2 col-12 col-sm-12 col-md-6 col-xl-8 p-5"><h6 class="text-center">Board for advertisements. Made on PHP8 without using a framework, on self-written classes, using the Twig template engine. There is blog navigation, viewing a single article, sorting by categories and tags. Site search works.</h6></div>
    </div>

{% for post in posts %}
    <div class="col-sm-6 col-md-4 col-lg-3 col-xxl-2 mt-3">
        <div class="box">
            <span class="item mb-2">&#128204;</span>
            <a href="/post/{{ post.id }}">
                <h5 class="card-title">{{ post.title }}</h5>
                <div class="">{{ post.body|slice(0,100) }}...</div>
            </a>
            <div class="text-muted mt-2">
                Posted: {{ post.created_at|date("d-m-Y") }}
            </div>
        </div>
    </div>
{% endfor %}
{% endblock %}

