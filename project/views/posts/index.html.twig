{% extends 'layout.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
    {% if posts %}
        <h5>{{ title }}</h5>
        {% for post in posts %}
            <div class="col-sm-6 col-md-4 col-lg-3 col-xxl-2 mt-3">
                {% if random(1, posts|length) != post.id %}
                    <div class="box">
                {% else %}
                    <div class="box top">
                {% endif %}
                    <span class="item mb-2">&#128204;</span>
                    <a href="/post/{{ post.id }}">
                        <h5 class="card-title">{{ post.title }}</h5>
                        <div class="">{{ post.body|slice(0,100) }}...</div>
                    </a>
                    <div class="text-muted mt-2">
                        Posted: {{ post.created_at|date("d-m-Y") }}
                    </div>
                </div>
            </div>
        {% endfor %}
    {% else %}
        <p>Nothing posts...</p>
    {% endif %}
{% endblock %}