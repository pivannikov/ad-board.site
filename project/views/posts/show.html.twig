{% extends 'layout.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block content %}
    {% if post %}
        <div class="col-md-6 mt-3">
            <div class="">
                <span class="item"><img src="/project/views/pin_{{ random(['blue', 'red', 'yellow']) }}.png" alt="" width="40"></span>
                <h5 class="card-title">{{ post.title }}</h5>
                <div class="">{{ post.body }}</div>
                <div class="text-muted mt-2">
                    Posted: {{ post.created_at|date("d-m-Y") }}
                </div>
                <div class="">Category: <a href="/category/{{ post.category_id }}">{{ post.category }}</a></div>
            </div>
        </div>

        <div class="d-flex justify-content-start mt-2">
            {% for tag in tags %}
                <a class="btn btn-info custom_tag_bg text-white btn-sm me-1" href="/tag/{{ tag.id }}" role="button">{{ tag.title }}</a>
            {% endfor %}
        </div>
    {% else %}
        <h4>Not found any posts..</h4>
    {% endif %}

{% endblock %}