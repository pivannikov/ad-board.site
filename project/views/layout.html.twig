<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <style>
        {{ source('css/custom.css') }}
    </style>
    <title>{% block title %}{% endblock %}</title>
</head>
<body>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="row justify-content-around mt-3 mb-4">
                <div class="col-xxl-2 col-lg-3 brand">
                    Ad - Board
                </div>
                <div class="col-xxl-6 col-lg-6 mt-4">
                    <form class="d-flex" method="post" action="/search">
                        <input class="form-control me-2" name="query" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-dark" type="submit">Search</button>
                    </form>
                </div>
            </div>

            <nav class="navbar navbar-expand-lg navbar-light bg-warning mt-2">
                <div class="container-fluid">
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="/">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/posts">All announcements</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Categories
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" href="/category/real-estate">Real estate</a></li>
                                    <li><a class="dropdown-item" href="/category/animals">Animals</a></li>
                                    <li><a class="dropdown-item" href="/category/auto">Auto</a></li>
                                    <li><a class="dropdown-item" href="/category/tourism">Tourism</a></li>
                                    <li><a class="dropdown-item" href="/category/job">Job</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="/categories">Categories description</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>

            <div class="progress mt-1">
                <div class="progress-bar bg-dark" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
            </div>

            <div class="min-vh-100">
                <div class="row justify-content-center">
                    <div class="col-md-11 mt-5">
                        <div class="row">{% block content %}{% endblock %}</div>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-11 mt-5 mb-3">
                    {% for tag in tags %}
                        <a class="btn btn-outline-success btn-sm mb-2" href="/tag/{{ tag.title }}" role="button">{{ tag.title }}</a>
                    {% endfor %}
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="progress mb-2 border-top border-5 border-dark">
                        <div class="progress-bar bg-warning" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

</body>
</html>